#!/bin/sh
# Absolute path to this script, e.g. /home/user/bin/foo.sh
SCRIPT=$(readlink -f "$0")
# Absolute path this script is in, thus /home/user/bin
SCRIPTPATH=$(dirname "$SCRIPT")

# check our output directory
OUT_DIR="$SCRIPTPATH/../outputs/D2"
echo "summarizer: OUT_DIR=$OUT_DIR" >&2
if [ -d "$OUT_DIR" ]; then
    if [ -z "$(ls "$OUT_DIR")" ]; then
        echo "summarizer: OUT_DIR empty, nothing to clean up" >&2
    else
        echo "summarizer: OUT_DIR is not empty, cleaning up...." >&2
        rm -rf "$OUT_DIR"
    fi
fi
$SCRIPTPATH/../src/summarizer.py $@
